<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/operand"
        android:layout_width="371dp"
        android:layout_height="103dp"
        android:layout_marginBottom="12dp"
        android:gravity="end"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="335dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result"
        app:layout_constraintVertical_bias="0.5">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#CFCFCF"
            android:text="C"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:cornerRadius="24dp"
            app:layout_constraintEnd_toStartOf="@+id/plusminus"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/plusminus"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#CFCFCF"
            app:cornerRadius="24dp"
            app:icon="@drawable/minusplus"
            app:iconGravity="textEnd"
            app:iconTint="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/foiz"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/clear"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/foiz"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#CFCFCF"
            android:text="%"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:cornerRadius="24dp"
            app:layout_constraintEnd_toStartOf="@+id/div"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/plusminus" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/div"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#4A65FD"
            android:text="/"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:cornerRadius="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/foiz" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="410dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout1"
        app:layout_constraintVertical_bias="0.5">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/yetti"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#FFFFFF"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:cornerRadius="24dp"
            app:layout_constraintEnd_toStartOf="@+id/sakkiz"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sakkiz"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#FFFFFF"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:cornerRadius="24dp"
            app:layout_constraintEnd_toStartOf="@+id/toqqiz"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/yetti" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/toqqiz"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#FFFFFF"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:cornerRadius="24dp"
            app:layout_constraintEnd_toStartOf="@+id/multiply"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/sakkiz" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/multiply"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#4A65FD"
            android:text="x"
            android:textAllCaps="false"
            android:textSize="25sp"
            app:cornerRadius="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/toqqiz" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="570dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout1"
        app:layout_constraintVertical_bias="0.5">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bir"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#FFFFFF"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:cornerRadius="24dp"
            app:layout_constraintEnd_toStartOf="@+id/ikki"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ikki"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#FFFFFF"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:cornerRadius="24dp"
            app:layout_constraintEnd_toStartOf="@+id/uch"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/bir" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/uch"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#FFFFFF"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:cornerRadius="24dp"
            app:layout_constraintEnd_toStartOf="@+id/plus"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/ikki" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#4A65FD"
            android:text="+"
            android:textSize="30sp"
            app:cornerRadius="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/uch" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="650dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout1"
        app:layout_constraintVertical_bias="0.5">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/point"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#FFFFFF"
            android:text="."
            android:textColor="@color/black"
            android:textSize="30sp"
            app:cornerRadius="24dp"
            app:layout_constraintEnd_toStartOf="@+id/nol"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nol"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#FFFFFF"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:cornerRadius="24dp"
            app:layout_constraintEnd_toStartOf="@+id/button22"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/point" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button22"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#FFFFFF"
            app:cornerRadius="24dp"
            app:icon="@drawable/delete"
            app:iconGravity="textEnd"
            app:iconTint="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/equal"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/nol" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/equal"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#4A65FD"
            android:text="="
            android:textSize="30sp"
            app:cornerRadius="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button22" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="490dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout1"
        app:layout_constraintVertical_bias="0.5">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tort"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#FFFFFF"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:cornerRadius="24dp"
            app:layout_constraintEnd_toStartOf="@+id/besh"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/besh"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#FFFFFF"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:cornerRadius="30dp"
            app:layout_constraintEnd_toStartOf="@+id/olti"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tort" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/olti"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#FFFFFF"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:cornerRadius="24dp"
            app:layout_constraintEnd_toStartOf="@+id/minus"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/besh" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/minus"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#4A65FD"
            android:text="-"
            android:textSize="30sp"
            app:cornerRadius="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/olti" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/result"
        android:layout_width="403dp"
        android:layout_height="109dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="444dp"
        android:gravity="end"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>